post_install() {

    echo "To complete installation, run /opt/ut2004/Scripts/install-cabs as root. This extracts game files from the retail disc.

This operation requires approximately 6G of disk space."
}

post_remove() {
   
    # Cleaning up the post install files. 
    rm -r /opt/ut2004 >& /dev/null
}


